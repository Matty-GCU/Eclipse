package test;

import java.util.Scanner;
import java.util.LinkedList;

public class Main {

	//20220214Âå¹ÈP1420
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int ans = 1;
		int x, prevX = sc.nextInt();
		int count = 1;
		
		for(int i = 1; i < n; i++) {
			x = sc.nextInt();
			if(x - prevX == 1) {
				count++;
			}
			else {
				ans = Math.max(count, ans);
				count = 1;////////////
			}
			prevX = x;
			//System.out.println(x + "  " + stack.size());
		}
		System.out.println(ans);
		sc.close();
	}

}
